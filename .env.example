# ============================================
# CONVEX DATABASE CONFIGURATION
# ============================================
# Get these values by running: npx convex dev
# Both URLs should point to the same Convex deployment

# VITE_CONVEX_URL: Used by client-side React code (browser)
# This MUST start with VITE_ to be accessible in the browser
# Example: https://your-deployment.convex.cloud
VITE_CONVEX_URL=

# CONVEX_URL: Used by server-side code (React Router loaders/actions)
# Should be the same URL as VITE_CONVEX_URL
# Example: https://your-deployment.convex.cloud
CONVEX_URL=

# ============================================
# WORKOS AUTHENTICATION CONFIGURATION
# ============================================
# Sign up at https://workos.com and create a project
# Required for authentication to work

# WORKOS_API_KEY: Secret API key from WorkOS dashboard
# Found at: WorkOS Dashboard → API Keys
# REQUIRED - App will not start without this
WORKOS_API_KEY=your_workos_api_key_here

# WORKOS_CLIENT_ID: Client ID from your WorkOS application
# Found at: WorkOS Dashboard → Applications → [Your App]
# REQUIRED - App will not start without this
WORKOS_CLIENT_ID=your_workos_client_id_here

# WORKOS_REDIRECT_URI: OAuth callback URL
# This must match the redirect URI configured in WorkOS dashboard
# For local development, use: http://localhost:5173/auth/callback
# For production, use: https://yourdomain.com/auth/callback
WORKOS_REDIRECT_URI=http://localhost:5173/auth/callback

# ============================================
# SESSION CONFIGURATION
# ============================================
# SESSION_SECRET: Random string used to encrypt session cookies
# REQUIRED - Generate a secure random string for production
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_here

# ============================================
# STRIPE BILLING CONFIGURATION
# ============================================
# Sign up at https://stripe.com and get your API keys
# Use test mode keys (sk_test_...) for development
# Switch to live keys (sk_live_...) for production

# STRIPE_SECRET_KEY: Secret API key from Stripe dashboard
# Found at: Stripe Dashboard → Developers → API Keys
# Use test key for development: sk_test_...
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# VITE_STRIPE_PUBLISHABLE_KEY: Publishable key for client-side Stripe.js
# Found at: Stripe Dashboard → Developers → API Keys
# Use test key for development: pk_test_...
# This MUST start with VITE_ to be accessible in the browser
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# STRIPE_WEBHOOK_SECRET: Webhook signing secret
# Found at: Stripe Dashboard → Developers → Webhooks → [Your Endpoint]
# For local testing: Get from `stripe listen` command output
# For production: Get from webhook endpoint settings in Stripe dashboard
# Example: whsec_...
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# STRIPE PRODUCT PRICE IDs
# ============================================
# Create products in Stripe dashboard and copy the price IDs here
# These IDs start with "price_" and are found in:
# Stripe Dashboard → Products → [Your Product] → Pricing → API ID

# Starter Plan Price IDs
STRIPE_PRICE_STARTER_MONTHLY=price_your_starter_monthly_id
STRIPE_PRICE_STARTER_ANNUAL=price_your_starter_annual_id

# Professional Plan Price IDs
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_your_pro_monthly_id
STRIPE_PRICE_PROFESSIONAL_ANNUAL=price_your_pro_annual_id

# Additional Seat Price ID (recurring, per-seat)
STRIPE_PRICE_ADDITIONAL_SEAT=price_your_additional_seat_id

# ============================================
# OBSERVABILITY & LOGGING
# ============================================
# Set OBSERVABILITY_TARGET to "console" for local dev or "sentry" to enable Sentry reporting.
OBSERVABILITY_TARGET=console
# Provide a Sentry DSN to capture errors when OBSERVABILITY_TARGET=sentry
SENTRY_DSN=
# Optional: label events by environment (defaults to NODE_ENV)
SENTRY_ENVIRONMENT=development
# Optional: sampling for Sentry tracing (0.0 - 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# EMAIL TRANSPORT
# ============================================
# EMAIL_TRANSPORT: "file" writes Markdown previews, "console" logs JSON payloads
EMAIL_TRANSPORT=file
# Directory for Markdown previews when EMAIL_TRANSPORT=file
EMAIL_PREVIEW_DIR=tmp/mail-previews

# ============================================
# METRICS / STATSD
# ============================================
# METRICS_TARGET: "console" for local logging, "statsd" to emit UDP packets
METRICS_TARGET=console
# METRICS_STATSD_HOST / PORT used when METRICS_TARGET=statsd
METRICS_STATSD_HOST=127.0.0.1
METRICS_STATSD_PORT=8125
